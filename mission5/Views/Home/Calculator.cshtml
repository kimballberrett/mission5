@*
    Calculator page view - Tutoring Cost Calculator
    Allows users to calculate the total cost of language tutoring sessions
    based on hours and a fixed hourly rate of $50.00
*@

@{
    // Set the page title shown in the browser tab and layout
    ViewData["Title"] = "Tutoring Calculator";
}

<div class="container">
    @* Page header with title and description *@
    <div class="text-center mb-4">
        <h1 class="display-4">Language Tutoring Calculator</h1>
        <p class="lead">Calculate the cost of your personalized language learning sessions</p>
    </div>

    @* Center the calculator card on the page using Bootstrap grid *@
    <div class="row justify-content-center">
        <div class="col-md-6">
            @* Card component containing the calculator form *@
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Cost Calculator</h3>

                    @* Input field for number of hours *@
                    <div class="mb-3">
                        <label for="hours" class="form-label">Number of Hours</label>
                        <input type="number" class="form-control" id="hours" placeholder="Enter number of hours" min="0" step="0.5">
                        @* Error message container (hidden by default, shown by JavaScript on validation failure) *@
                        <div id="hoursError" class="text-danger mt-1" style="display: none;">Please enter a valid positive number</div>
                    </div>

                    @* Display field for the fixed hourly rate (read-only) *@
                    <div class="mb-3">
                        <label for="hourlyRate" class="form-label">Hourly Rate</label>
                        <input type="text" class="form-control" id="hourlyRate" value="$50.00" readonly>
                    </div>

                    @* Calculate button (triggers JavaScript calculation function) *@
                    <div class="d-grid gap-2 mb-3">
                        <button id="calculateBtn" class="btn btn-primary btn-lg">Calculate Total</button>
                    </div>

                    @* Output field displaying the calculated total cost (read-only) *@
                    <div class="mb-3">
                        <label for="total" class="form-label">Total Cost</label>
                        <input type="text" class="form-control" id="total" readonly placeholder="$0.00">
                    </div>
                </div>
            </div>

            @* Navigation link to return to the home page *@
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    ‚Üê Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@* Scripts section - loads the calculator JavaScript file *@
@section Scripts {
    @* asp-append-version adds a query string for cache busting when the file changes *@
    <script src="~/js/calculator.js" asp-append-version="true"></script>
}
