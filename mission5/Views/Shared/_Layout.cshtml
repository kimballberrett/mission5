@*
    Master Layout Template
    This layout wraps all pages in the application, providing consistent structure
    including navigation header, footer, and script references
    Used by all views unless they specify a different layout
*@

<!DOCTYPE html>
<html lang="en">
<head>
    @* Character encoding for proper text display *@
    <meta charset="utf-8"/>

    @* Responsive viewport settings for mobile devices *@
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    @* Dynamic page title - combines view-specific title with site name *@
    <title>@ViewData["Title"] - Language Learning</title>

    @* Favicon links for browser tabs and bookmarks *@
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png"/>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico"/>

    @* Import map for ES modules (currently empty but available for future use) *@
    <script type="importmap"></script>

    @* CSS Stylesheets - loaded in order of specificity *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>                  @* Bootstrap framework styles *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>                   @* Custom site styles *@
    <link rel="stylesheet" href="~/mission5.styles.css" asp-append-version="true"/>            @* Scoped component styles *@
</head>
<body>
    @* Site Header and Navigation *@
    <header>
        @* Bootstrap navbar - responsive navigation bar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* Brand/logo link - returns to home page *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">mission5</a>

                @* Mobile menu toggle button (hamburger icon) - visible on small screens *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* Navigation menu - collapses on mobile devices *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Home page navigation link *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* Calculator page navigation link *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Calculator">Calculator</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* Main Content Area *@
    <div class="container">
        <main role="main" class="pb-3">
            @* RenderBody() injects the content from individual views here *@
            @RenderBody()
        </main>
    </div>

    @* Site Footer *@
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <p class="mb-1">&copy; IS 413 2026</p>
            <p class="mb-0"><small>Built by Kimball Berrett</small></p>
        </div>
    </footer>

    @* JavaScript Libraries and Scripts - loaded at end of body for performance *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>                        @* jQuery library - required by Bootstrap and calculator *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>        @* Bootstrap JavaScript for interactive components *@
    <script src="~/js/site.js" asp-append-version="true"></script>                 @* Site-wide JavaScript *@

    @* Render optional Scripts section from individual views (e.g., calculator.js) *@
    @* required: false means pages don't have to define this section *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>