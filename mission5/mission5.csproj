<!--
    Project File for mission5 ASP.NET Core Web Application
    Defines build configuration, target framework, and project dependencies
-->
<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <!-- Target .NET 10.0 framework for latest features and performance -->
        <TargetFramework>net10.0</TargetFramework>

        <!-- Enable nullable reference types for better null safety and fewer runtime errors -->
        <Nullable>enable</Nullable>

        <!-- Enable implicit using directives to reduce boilerplate code -->
        <!-- Common namespaces like System, System.Collections.Generic are automatically imported -->
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

</Project>
