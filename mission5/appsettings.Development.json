{
  // Development environment specific settings
  // These settings override appsettings.json when ASPNETCORE_ENVIRONMENT=Development

  "Logging": {
    "LogLevel": {
      // Default logging level for development - Information level for debugging
      "Default": "Information",

      // ASP.NET Core framework logs - Warning level to avoid excessive logging
      "Microsoft.AspNetCore": "Warning"
    }
  }

  // Note: For more verbose development logging, you could set these to "Debug" or "Trace"
}
